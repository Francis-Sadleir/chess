void drawBoard() {
  int x = 0;
  int y = 0;
  while (y < 8) {
    if ( (x%2) == (y%2) ) { 
      fill(lightbrown);
    } else { 
      fill(darkbrown);
    }
    rect(x*100, y*100, 100, 100);
    x++;
    if (x == 8) {
      x = 0;
      y++;
    }
  }
}

